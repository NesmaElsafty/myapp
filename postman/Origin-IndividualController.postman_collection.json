{
	"info": {
		"_postman_id": "origin-individual-controller",
		"name": "Origin - IndividualController",
		"description": "API requests for Origin IndividualController: add individual, get requests, change status, my individuals. Requires Bearer token for a user with type `origin`.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8000/api"
		},
		{
			"key": "origin_token",
			"value": ""
		},
		{
			"key": "lang",
			"value": "en"
		},
		{
			"key": "individual_id",
			"value": "1"
		}
	],
	"item": [
		{
			"name": "Add individual to origin",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Accept",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{origin_token}}"
					},
					{
						"key": "lang",
						"value": "{{lang}}"
					},
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"individual_id\": {{individual_id}}\n}"
				},
				"url": {
					"raw": "{{base_url}}/origin/addIndividual",
					"host": ["{{base_url}}"],
					"path": ["origin", "addIndividual"]
				},
				"description": "Link an individual user to the authenticated origin. Requires origin token."
			},
			"response": [],
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Status is 200 or 403/404', function () {",
							"    pm.expect([200, 403, 404]).to.include(pm.response.code);",
							"});",
							"pm.test('Response has message', function () {",
							"    const json = pm.response.json();",
							"    pm.expect(json).to.have.property('message');",
							"});"
						],
						"type": "text/javascript"
					}
				}
			]
		},
		{
			"name": "Get individual requests (pending)",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{origin_token}}"
					},
					{
						"key": "lang",
						"value": "{{lang}}"
					}
				],
				"url": {
					"raw": "{{base_url}}/origin/getIndividualRequests",
					"host": ["{{base_url}}"],
					"path": ["origin", "getIndividualRequests"]
				},
				"description": "List individuals who requested to join this origin (pending status)."
			},
			"response": [],
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Status is 200', function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"pm.test('Response has message, data, pagination', function () {",
							"    const json = pm.response.json();",
							"    pm.expect(json).to.have.property('message');",
							"    pm.expect(json).to.have.property('data');",
							"    pm.expect(json).to.have.property('pagination');",
							"});"
						],
						"type": "text/javascript"
					}
				}
			]
		},
		{
			"name": "Change request status (approve/reject)",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Accept",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{origin_token}}"
					},
					{
						"key": "lang",
						"value": "{{lang}}"
					},
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"individual_id\": {{individual_id}},\n    \"status\": \"approved\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/origin/changeRequestStatus",
					"host": ["{{base_url}}"],
					"path": ["origin", "changeRequestStatus"]
				},
				"description": "Approve or reject an individual's request. status: approved | rejected."
			},
			"response": [],
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Status is 200, 403, or 404', function () {",
							"    pm.expect([200, 403, 404]).to.include(pm.response.code);",
							"});",
							"pm.test('Response has message', function () {",
							"    const json = pm.response.json();",
							"    pm.expect(json).to.have.property('message');",
							"});"
						],
						"type": "text/javascript"
					}
				}
			]
		},
		{
			"name": "My individuals",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{origin_token}}"
					},
					{
						"key": "lang",
						"value": "{{lang}}"
					}
				],
				"url": {
					"raw": "{{base_url}}/origin/myIndividuals",
					"host": ["{{base_url}}"],
					"path": ["origin", "myIndividuals"]
				},
				"description": "List all individuals linked to this origin (origin_id = current user)."
			},
			"response": [],
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Status is 200', function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"pm.test('Response has message, data, pagination', function () {",
							"    const json = pm.response.json();",
							"    pm.expect(json).to.have.property('message');",
							"    pm.expect(json).to.have.property('data');",
							"    pm.expect(json).to.have.property('pagination');",
							"});"
						],
						"type": "text/javascript"
					}
				}
			]
		}
	]
}
