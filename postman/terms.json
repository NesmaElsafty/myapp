						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 201\", function () {",
									"    pm.response.to.have.status(201);",
									"});",
									"",
									"if (pm.response.code === 201) {",
									"    const jsonData = pm.response.json();",
									"    pm.environment.set('term_id', jsonData.data.id);",
									"}",
									"",
									"pm.test(\"Response has Term data\", function () {",
									"    const jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('data');",
									"    pm.expect(jsonData.data).to.have.property('title_en');",
									"    pm.expect(jsonData.data).to.have.property('title_ar');",
									"    pm.expect(jsonData.data).to.have.property('content_en');",
