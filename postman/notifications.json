			"name": "Admin - Notifications",
			"item": [
				{
					"name": "List Notifications",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Response has message, data, and pagination\", function () {",
									"    const jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('message');",
									"    pm.expect(jsonData).to.have.property('data');",
									"    pm.expect(jsonData).to.have.property('pagination');",
									"    pm.expect(jsonData.data).to.be.an('array');",
									"});",
									"",
									"// Store first notification ID for other requests",
									"if (pm.response.json().data.length > 0) {",
									"    pm.environment.set('notification_id', pm.response.json().data[0].id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "lang",
								"value": "en",
								"description": "Language: en or ar"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{admin_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/admin/notifications?sorted_by=newest",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"admin",
								"notifications"
							],
							"query": [
								{
									"key": "search",
									"value": "test",
									"description": "Search in title or content",
									"disabled": true
								},
								{
									"key": "type",
									"value": "reminder",
									"description": "Filter by type: reminder, alert, notification, all",
									"disabled": true
								},
								{
									"key": "target_type",
									"value": "user",
									"description": "Filter by target: user, individual, origin, all",
									"disabled": true
