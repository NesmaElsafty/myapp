{
	"info": {
		"name": "Plans API",
		"description": "Collection for testing Plans CRUD and bulk actions",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Public - Plans",
			"item": [
				{
					"name": "List Plans",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Response has message, data, and pagination\", function () {",
									"    const jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('message');",
									"    pm.expect(jsonData).to.have.property('data');",
									"    pm.expect(jsonData).to.have.property('pagination');",
									"    pm.expect(jsonData.data).to.be.an('array');",
									"});",
									"",
									"if (pm.response.json().data.length > 0) {",
									"    pm.environment.set('plan_id', pm.response.json().data[0].id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "lang",
								"value": "en",
								"description": "Language: en or ar"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/plans?sorted_by=newest",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"plans"
							],
							"query": [
								{
									"key": "search",
									"value": "",
									"description": "Search in name",
									"disabled": true
								},
								{
									"key": "target_user",
									"value": "individual",
									"description": "Filter: individual, origin, all",
									"disabled": true
								},
								{
									"key": "is_active",
									"value": "1",
									"description": "Filter: 1, 0, all",
									"disabled": true
								},
								{
									"key": "sorted_by",
									"value": "newest",
									"description": "Sort: name, newest, oldest, all"
								},
								{
									"key": "official_duration",
									"value": "12",
									"description": "Filter duration: 1, 3, 6, 12, all",
									"disabled": true
								}
							]
						},
						"description": "Get paginated list of plans. Query: search, target_user, is_active, sorted_by, official_duration."
					}
				},
				{
					"name": "Get Single Plan",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Response has plan\", function () {",
									"    const jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('plan');",
									"    pm.expect(jsonData.plan).to.have.property('id');",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "lang",
								"value": "en"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/plans/{{plan_id}}",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"plans",
								"{{plan_id}}"
							]
						},
						"description": "Get a single plan by ID. Response key is 'plan'."
					}
				}
			]
		},
		{
