{
	"info": {
		"name": "Categories API",
		"description": "Collection for testing Categories CRUD and bulk actions",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Public - Categories",
			"item": [
				{
					"name": "List Categories",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Response has message and data\", function () {",
									"    const jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('message');",
									"    pm.expect(jsonData).to.have.property('data');",
									"    pm.expect(jsonData.data).to.be.an('array');",
									"});",
									"",
									"if (pm.response.json().data && pm.response.json().data.length > 0) {",
									"    pm.environment.set('category_id', pm.response.json().data[0].id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "lang",
								"value": "en",
								"description": "Language: en or ar"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/categories",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"categories"
							],
							"query": [
								{
									"key": "search",
									"value": "",
									"description": "Search in name_en, name_ar",
									"disabled": true
								},
								{
									"key": "is_active",
									"value": "1",
									"description": "Filter: 1, 0, all",
									"disabled": true
								},
								{
									"key": "sorted_by",
									"value": "newest",
									"description": "Sort: name, newest, oldest, all",
									"disabled": true
								}
							]
						},
						"description": "Get list of categories. Query: search, is_active, sorted_by."
					}
				},
				{
					"name": "Get Single Category",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Response has data\", function () {",
									"    const jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('data');",
									"    pm.expect(jsonData.data).to.have.property('id');",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "lang",
								"value": "en"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/categories/{{category_id}}",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"categories",
								"{{category_id}}"
							]
						},
						"description": "Get a single category by ID."
					}
				}
			]
		},
