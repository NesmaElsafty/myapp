		{
			"name": "Admin Endpoints",
			"item": [
				{
					"name": "Create FAQ",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 201\", function () {",
									"    pm.response.to.have.status(201);",
									"});",
									"",
									"if (pm.response.code === 201) {",
									"    const jsonData = pm.response.json();",
									"    pm.environment.set('faq_id', jsonData.data.id);",
									"}",
									"",
									"pm.test(\"Response has FAQ data\", function () {",
									"    const jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('data');",
									"    pm.expect(jsonData.data).to.have.property('question_en');",
									"    pm.expect(jsonData.data).to.have.property('question_ar');",
									"    pm.expect(jsonData.data).to.have.property('answer_en');",
									"    pm.expect(jsonData.data).to.have.property('answer_ar');",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{admin_token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"question_en\": \"How do I create an account?\",\n    \"question_ar\": \"كيف يمكنني إنشاء حساب؟\",\n    \"answer_en\": \"To create an account, click on the Register button and fill in your details.\",\n    \"answer_ar\": \"لإنشاء حساب، انقر على زر التسجيل واملأ بياناتك.\",\n    \"segment\": \"user\",\n    \"is_active\": true\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/api/admin/faqs",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"admin",
								"faqs"
							]
						},
						"description": "Create a new FAQ. Requires admin authentication. Automatically saves faq_id to environment."
					}
